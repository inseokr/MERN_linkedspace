<% include ../../partials/header %>

<div class="container" style="text-align: center; margin-bottom: 10px">
  <h3>Listing room/house</h3>  
</div>

<div class="container">
<!-- totalSteps and curr_step should be provided -->
	<%var curr_step=4; 
	  var totalSteps=6;
	  var title = "What spaces can tenants use?"%> 
	<% include ../../partials/stepwizard_v2 %>

	<form role="form" action="/listing/landlord/<%=listing_info.listing_id%>?_method=PUT" method="post">
		<div class="row setup-content" id="step-<%=curr_step%><" style="margin-top:40px;">
			<div class="col-md-6 offset-md-3">
				<div class="col-md-12">
					<div style="text-align:center">
						<h5> <%=title%></h5>
					</div>
					<hr>

					<div class="d-flex flex-column">
						<div class="p-2">
							<div class="col form-check-inline listing-check-box" style="margin-left: 5px;">
						        <label class="switch switch-sm" style="margin-bottom: auto">
						            <input type="checkbox" class="primary" style="margin-left:-3px" name="accessible_spaces[living_room]" id="living_room">
						            <span class="slider-sm round"></span>
						        </label>
								<div style="margin-bottom:auto; margin-left: 5px"> Living Room </div>
						    </div>
						</div>
						<div class="p-2">
							<div class="col form-check-inline listing-check-box" style="margin-left: 5px;">
						        <label class="switch switch-sm" style="margin-bottom: auto">
						            <input type="checkbox" class="primary" style="margin-left:-3px" name="accessible_spaces[pool]" id="pool">
						            <span class="slider-sm round"></span>
						        </label>
								<div style="margin-bottom:auto; margin-left: 5px;"> Pool </div>
						    </div>
						</div>
						<div class="p-2">
							<div class="col form-check-inline listing-check-box" style="margin-left: 5px;">
						        <label class="switch switch-sm" style="margin-bottom: auto">
						            <input type="checkbox" class="primary" style="margin-left:-3px" name="accessible_spaces[gym]" id="gym">
						            <span class="slider-sm round"></span>
						        </label>
								<div style="margin-bottom:auto; margin-left: 5px;"> Gym </div>
						    </div>
						</div>
						<div class="p-2">
							<div class="col form-check-inline listing-check-box" style="margin-left: 5px;">
						        <label class="switch switch-sm" style="margin-bottom: auto">
						            <input type="checkbox" class="primary" style="margin-left:-3px" name="accessible_spaces[kitchen]" id="kitchen">
						            <span class="slider-sm round"></span>
						        </label>
								<div style="margin-bottom:auto; margin-left: 5px;"> Kitchen </div>
						    </div>
						</div>
						<div class="p-2">
							<div class="col form-check-inline listing-check-box" style="margin-left: 5px;">
						        <label class="switch switch-sm" style="margin-bottom: auto">
						            <input type="checkbox" class="primary" style="margin-left:-3px" name="accessible_spaces[laundry]" id="laundry">
						            <span class="slider-sm round"></span>
						        </label>
								<div style="margin-bottom:auto;margin-left: 5px;"> Laundry </div>
						    </div>
						</div>
						<div class="p-2">
							<div class="col form-check-inline listing-check-box" style="margin-left: 5px;">
						        <label class="switch switch-sm" style="margin-bottom: auto">
						            <input type="checkbox" class="primary" style="margin-left:-3px" name="accessible_spaces[parking]" id="parking">
						            <span class="slider-sm round"></span>
						        </label>
								<div style="margin-bottom:auto;margin-left: 5px;">Parking(Garage or driveway)</div>
						    </div>
						</div>

						<div class="p-2">
				    		<a href='<%="/listing/landlord/"+listing_info.listing_id+"/step3"%>' class="btn btn-success btn-lg float-left">Prev</a>
				    		<button class="btn btn-primary nextBtn btn-lg float-right" type="submit" name="submit" value="step#4">Next</button>
				    	</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>

<script>
	<%if(listing_info.listing!=null){%>
		$("#living_room").prop('checked', <%=eval('listing_info.listing.accessible_spaces.living_room')%>);
		$("#pool").prop('checked', <%=eval('listing_info.listing.accessible_spaces.pool')%>);
		$("#gym").prop('checked', <%=eval('listing_info.listing.accessible_spaces.gym')%>);
		$("#kitchen").prop('checked', <%=eval('listing_info.listing.accessible_spaces.kitchen')%>);
		$("#laundry").prop('checked', <%=eval('listing_info.listing.accessible_spaces.laundry')%>);
		$("#parking").prop('checked', <%=eval('listing_info.listing.accessible_spaces.parking')%>);
	<%}%>
</script>

<% include ../../partials/footer %>